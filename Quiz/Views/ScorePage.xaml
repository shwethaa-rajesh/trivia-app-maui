<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.Views.ScorePage"
             Title="ScorePage">

    <VerticalStackLayout VerticalOptions="Fill" Spacing="100" BackgroundColor="LavenderBlush" >
        <Label 
            Text="Congrats!"
            Padding="0,20"
            BackgroundColor="Lavender"
            HorizontalOptions="FillAndExpand"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            FontSize="36" />
        <HorizontalStackLayout 
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="StartAndExpand">


            <Label 
            Text="Your score is "
            VerticalOptions="Center" 
            FontAttributes="Bold"
            FontSize="36"
            HorizontalOptions="Center" />
            <Label
             x:Name="scoreLabel"
            Text="Your score is "
            VerticalOptions="Center" 
            FontAttributes="Bold"
            FontSize="36"
            HorizontalOptions="Center" />
        </HorizontalStackLayout>

        <Button Text="Back to home" Margin="20" Clicked="Button_Clicked">
        </Button>
    </VerticalStackLayout>
</ContentPage>
